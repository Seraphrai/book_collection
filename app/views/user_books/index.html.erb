<p style="color: green"><%= notice %></p>

<h1>User books</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Book Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_books.each do |user_book| %>
      <% user = User.find_by(id: user_book.user_id) %>
      <% book = Book.find_by(id: user_book.book_id) %>
      <tr>
        <td><%= user ? user.username : 'Unknown User' %></td>
        <td><%= book ? book.title : 'Unknown Book' %></td>
        <td>
          <%= link_to 'Show', user_book %> |
          <%= link_to 'Edit', edit_user_book_path(user_book) %> |
          <%= link_to 'Delete', user_book, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Book', new_user_book_path %>

